{
  "manifest_version": 3,
  "name": "Image Extractor",
  "version": "1.0",
  "description": "Extract and display all images from the webpage.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/facebook.png",
      "48": "icons/instagram.png",
      "128": "icons/whatsapp.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/facebook.png",
    "48": "icons/instagram.png",
    "128": "icons/whatsapp.png"
  }
}
